<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context="com.ids.appsubasta.subasta.ConfiguracionActivity">


    <Switch
        android:id="@+id/postorSwitch"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:layout_weight="1"
        android:checked="false"
        android:splitTrack="false"
        android:text="POSTOR"
        android:textSize="25dp"
        android:textColor="@android:color/white"
        android:trackTint="@android:color/background_light"
        tools:checked="false" />

    <Switch
        android:id="@+id/martilleroSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/postorSwitch"
        android:layout_alignStart="@+id/postorSwitch"
        android:layout_below="@+id/postorSwitch"
        android:layout_marginTop="40dp"
        android:layout_weight="1"
        android:text="MARTILLERO"
        android:textSize="25dp"
        android:textColor="@android:color/white"
        android:trackTint="@android:color/background_light" />

    <Switch
        android:id="@+id/vendedorSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/martilleroSwitch"
        android:layout_alignStart="@+id/martilleroSwitch"
        android:layout_below="@+id/martilleroSwitch"
        android:layout_marginTop="40dp"
        android:text="VENDEDOR"
        android:textSize="25dp"
        android:textColor="@android:color/white"
        android:trackTint="@android:color/background_light" />

    <Button
        android:id="@+id/back"
        android:layout_width="30px"
        android:layout_height="30px"
        android:background="@drawable/x"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:layout_marginStart="100dp" />
</RelativeLayout>
