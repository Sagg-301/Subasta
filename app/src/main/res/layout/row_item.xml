<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"



    >


    <RelativeLayout
        android:layout_width="700px"
        android:layout_height="350px"
        android:background="@drawable/timecuadros"
        android:layout_centerVertical="true"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="16dp"
        android:id="@+id/relativeLayout">

        <ImageView
            android:id="@+id/imagenid"
            android:layout_width="245px"
            android:layout_height="245px"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/iphonee"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

    <TextView
        android:id="@+id/textoidrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="TextView"
        android:layout_marginTop="50dp"
        android:textColor="@android:color/white"
        android:layout_marginEnd="225dp"
        android:layout_marginBottom="10dp"
        android:layout_alignTop="@+id/relativeLayout"
        android:layout_alignEnd="@+id/relativeLayout"
        android:textStyle="bold"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/descripcionidrow"
        android:layout_width="350px"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/textoidrow"
        android:layout_alignStart="@+id/textoidrow"
        android:layout_marginBottom="10dp"
        android:textSize="17dp"
        android:textColor="@android:color/white"/>
    <TextView
        android:id="@+id/Monto"
        android:layout_width="80px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descripcionidrow"
        android:layout_alignStart="@+id/descripcionidrow"
        android:layout_marginBottom="10dp"
        android:textSize="17dp"
        android:text="Monto:"
        android:textColor="@android:color/white"
        />
    <TextView
        android:id="@+id/montoidrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="17dp"
        android:textColor="@android:color/white"
        android:layout_alignBaseline="@+id/Monto"
        android:layout_alignBottom="@+id/Monto"
        android:layout_toEndOf="@+id/Monto" />






</RelativeLayout>