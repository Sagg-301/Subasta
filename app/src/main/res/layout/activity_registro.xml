<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/fondo_registro"
    >


    <EditText
    android:id="@+id/nombre_registro"
    android:layout_width="500px"
    android:layout_height="130px"
    android:background="@drawable/cuadrado_registro"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="120dp"
        android:hint="N O M B R E"
        android:paddingLeft="30px"
        android:paddingBottom="10dp"
        android:textColorHint="#ffffff"
        android:textColor="@android:color/white"
        android:textSize="30px" />

    <EditText
        android:id="@+id/apellido_registro"
        android:layout_width="500px"
        android:layout_height="130px"
        android:background="@drawable/cuadrado_registro"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nombre_registro"
        android:layout_marginTop="30px"
        android:hint="A P E L L I D O"
        android:paddingBottom="10dp"
        android:textColor="@android:color/white"
        android:textColorHint="#ffffff"
        android:textSize="30px"
        android:paddingLeft="30px"/>

    <EditText
        android:id="@+id/telefono_registro"
        android:layout_width="500px"
        android:layout_height="130px"
        android:background="@drawable/cuadro_registrotelefono"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/apellido_registro"
        android:layout_marginTop="30px"
        android:paddingBottom="10dp"
        android:textColor="@android:color/white"
        android:textSize="30px"
        android:paddingLeft="30px"/>

    <EditText
        android:id="@+id/email_registro"
        android:layout_width="500px"
        android:layout_height="130px"
        android:background="@drawable/cuadro_registroemail"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/telefono_registro"
        android:layout_marginTop="30px"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/white"
        android:textSize="30px"
        android:paddingBottom="10dp"
        android:paddingLeft="30px"/>

    <EditText
        android:id="@+id/usuario_registro"
        android:layout_width="500px"
        android:layout_height="130px"
        android:background="@drawable/cuadrado_registro"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/email_registro"
        android:layout_marginTop="30px"
        android:hint="U S U A R I O"
        android:textColorHint="#ffffff"
        android:textColor="@android:color/white"
        android:textSize="30px"
        android:paddingBottom="10dp"
        android:paddingLeft="30px"/>

    <EditText
        android:id="@+id/contrasena_registro"
        android:layout_width="500px"
        android:layout_height="130px"
        android:inputType="textPassword"
        android:background="@drawable/cuadro_registrocontrasena"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/usuario_registro"
        android:layout_marginTop="30px"
        android:textColor="@android:color/white"
        android:textSize="30px"
        android:paddingBottom="10dp"
        android:paddingLeft="30px"/>

    <Button
        android:id="@+id/registrarse_registro"
        android:layout_width="300px"
        android:layout_height="96px"
        android:textColor="@android:color/white"
        android:background="@drawable/registrarse_registro"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/contrasena_registro"
        android:layout_marginTop="70px" />

</RelativeLayout>