<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/registro_fondo"
    >


    <EditText
    android:id="@+id/nombre_registro"
    android:layout_width="500px"
    android:layout_height="130px"
    android:background="@drawable/registro_nombre"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="70dp"
        android:paddingLeft="60px"
        android:paddingBottom="10dp"
        android:textColor="@android:color/white"
        android:textSize="30px" />

    <EditText
        android:id="@+id/apellido_registro"
        android:layout_width="500px"
        android:layout_height="130px"
        android:background="@drawable/registro_apellido"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nombre_registro"
        android:layout_marginTop="30px"
        android:paddingBottom="10dp"
        android:textColor="@android:color/white"
        android:textSize="30px"
        android:paddingLeft="60px"/>

    <EditText
        android:id="@+id/telefono_registro"
        android:layout_width="500px"
        android:layout_height="130px"
        android:background="@drawable/registro_telefono"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/apellido_registro"
        android:layout_marginTop="30px"
        android:paddingBottom="10dp"
        android:textColor="@android:color/white"
        android:textSize="30px"
        android:paddingLeft="60px"/>

    <EditText
        android:id="@+id/email_registro"
        android:layout_width="500px"
        android:layout_height="130px"
        android:background="@drawable/registro_email"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/telefono_registro"
        android:layout_marginTop="30px"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/white"
        android:textSize="30px"
        android:paddingBottom="10dp"
        android:paddingLeft="60px"/>

    <EditText
        android:id="@+id/usuario_registro"
        android:layout_width="500px"
        android:layout_height="130px"
        android:background="@drawable/registro_usuario"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/email_registro"
        android:layout_marginTop="30px"
        android:textColor="@android:color/white"
        android:textSize="30px"
        android:paddingBottom="10dp"
        android:paddingLeft="60px"/>

    <EditText
        android:id="@+id/contrasena_registro"
        android:layout_width="500px"
        android:layout_height="130px"
        android:inputType="textPassword"
        android:background="@drawable/registro_clave"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/usuario_registro"
        android:layout_marginTop="30px"
        android:textColor="@android:color/white"
        android:textSize="30px"
        android:paddingBottom="10dp"
        android:paddingLeft="30px"/>

    <Button
        android:id="@+id/registrarse_registro"
        android:layout_width="300px"
        android:layout_height="96px"
        android:textColor="@android:color/white"
        android:background="@drawable/registro_btnregistrarse"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/contrasena_registro"
        android:layout_marginTop="30px" />

</RelativeLayout>