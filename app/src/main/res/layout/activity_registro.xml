<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/fondo_registro">


    <EditText
    android:id="@+id/nombre_registro"
    android:layout_width="500px"
    android:layout_height="110px"
    android:background="@drawable/cuadrado_registro"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="120dp"
        android:hint="N O M B R E"
        android:paddingLeft="30px"
        android:textColorHint="#ffffff"
        android:textSize="20px" />

    <EditText
        android:id="@+id/apellido_registro"
        android:layout_width="500px"
        android:layout_height="110px"
        android:background="@drawable/cuadrado_registro"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nombre_registro"
        android:layout_marginTop="30px"
        android:hint="A P E L L I D O"
        android:textColorHint="#ffffff"
        android:textSize="20px"
        android:paddingLeft="30px"/>

    <EditText
        android:id="@+id/telefono_registro"
        android:layout_width="500px"
        android:layout_height="110px"
        android:background="@drawable/cuadrado_registro"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/apellido_registro"
        android:layout_marginTop="30px"
        android:hint="T E L E F O N O"
        android:textColorHint="#ffffff"
        android:textSize="20px"
        android:paddingLeft="30px"/>

    <EditText
        android:id="@+id/email_registro"
        android:layout_width="500px"
        android:layout_height="110px"
        android:background="@drawable/cuadrado_registro"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/telefono_registro"
        android:layout_marginTop="30px"
        android:hint="E - M A I L"
        android:textColorHint="#ffffff"
        android:textSize="20px"
        android:paddingLeft="30px"/>

    <EditText
        android:id="@+id/usuario_registro"
        android:layout_width="500px"
        android:layout_height="110px"
        android:background="@drawable/cuadrado_registro"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/email_registro"
        android:layout_marginTop="30px"
        android:hint="U S U A R I O"
        android:textColorHint="#ffffff"
        android:textSize="20px"
        android:paddingLeft="30px"/>

    <EditText
        android:id="@+id/contrasena_registro"
        android:layout_width="500px"
        android:layout_height="110px"
        android:background="@drawable/cuadrado_registro"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/usuario_registro"
        android:layout_marginTop="30px"
        android:hint="C O N T R A S E Ã‘ A"
        android:textColorHint="#ffffff"
        android:textSize="20px"
        android:paddingLeft="30px"/>

    <Button
        android:id="@+id/registrarse_registro"
        android:layout_width="290px"
        android:layout_height="90px"
        android:background="@drawable/registrarse_registro"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/contrasena_registro"
        android:layout_marginTop="70px" />


</RelativeLayout>