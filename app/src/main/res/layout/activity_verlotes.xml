<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/fondorojoo"
    >

    <ImageView
        android:id="@+id/CuadradoVerLotes"
        android:layout_width="450px"
        android:layout_height="450px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/cuadrado_verlote" />

    <ImageView
        android:id="@+id/VerLotesImagen"
        android:layout_width="400px"
        android:layout_height="400px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/iphonee"
        />

    <TextView
        android:id="@+id/tituloVerLotes"
        android:layout_width="250px"
        android:layout_height="100px"
        android:textSize="40dp"
        android:layout_below="@+id/CuadradoVerLotes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/descricionVerLotes"
        android:layout_width="500px"
        android:layout_height="100px"
        android:textSize="20dp"
        android:layout_below="@+id/tituloVerLotes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/montoVerLotes"
        android:layout_width="200px"
        android:layout_height="40px"
        android:textSize="20dp"
        android:layout_below="@+id/descricionVerLotes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/fechaVerLotes"
        android:layout_width="500px"
        android:layout_height="60px"
        android:textSize="20dp"
        android:layout_below="@+id/montoVerLotes"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="170dp"
        android:textColor="@android:color/white"/>

    <EditText
        android:id="@+id/montoidVerLotes"
        android:layout_width="550px"
        android:layout_height="80px"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@drawable/linea_verlote"
        android:layout_above="@+id/pujarVerLotes"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textSize="30px"
        android:paddingLeft="50px"
        android:paddingTop="5dp"
        android:textColor="#f6e397"
        android:textColorHint="#eda0a0"
        android:hint="M O N T O  A  P U J A R"/>

    <Button
        android:id="@+id/pujarVerLotes"
        android:layout_width="550px"
        android:layout_height="100px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/pujar_verlote"
         />

</RelativeLayout>