<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/micuenta_fondo">


    <ImageView
        android:id="@+id/fotoperfil"
        android:layout_width="300px"
        android:layout_height="300px"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_marginTop="77dp"
        android:layout_below="@+id/micuentaAtras"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:text="OENEIKA"
        android:textStyle="bold"
        android:layout_below="@+id/fotoperfil"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />
    <TextView
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alexander"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:layout_below="@+id/usuario"
        android:layout_marginTop="210dp"
        android:layout_alignTop="@+id/usuario"
        android:layout_marginLeft="200dp"/>

    <TextView
        android:id="@+id/apellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:text="De Azevedo"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/nombre"
        android:layout_marginLeft="220dp"/>

    <TextView
        android:id="@+id/telefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:text="02121234567"
        android:layout_below="@+id/apellido"
        android:layout_marginLeft="230dp"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:text="oeneikaphotos@gmail.com"
        android:layout_below="@+id/telefono"
        android:layout_alignStart="@+id/fotoperfil" />



    <Button
        android:id="@+id/micuentaAtras"
        android:layout_width="30px"
        android:layout_height="30px"
        android:layout_marginStart="80dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/x"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/background_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>