<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/micuenta_fondo">


    <ImageView
        android:id="@+id/fotoperfil"
        android:layout_width="300px"
        android:layout_height="300px"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_marginTop="77dp"
        android:layout_below="@+id/micuentaAtras"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:text="OENEIKA"
        android:textStyle="bold"
        android:layout_below="@+id/fotoperfil"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/textonombre"
        android:layout_width="200px"
        android:layout_height="40px"
        android:text="NOMBRE:"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="560dp"
        />
    <TextView
        android:id="@+id/nombre"
        android:layout_width="300px"
        android:layout_height="40px"
        android:text="Alexander"
        android:textColor="#ffffff"
        android:textSize="28dp"
        android:paddingLeft="40dp"
        android:layout_alignBaseline="@+id/textonombre"
        android:layout_alignBottom="@+id/textonombre"
        android:layout_alignStart="@+id/fotoperfil" />

    <TextView
        android:id="@+id/textoapellido"
        android:layout_width="200px"
        android:layout_height="40px"
        android:text="APELLIDO:"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/textonombre"
        />

    <TextView
        android:id="@+id/apellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="28dp"
        android:text="De Azevedo"
        android:paddingLeft="50dp"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/textonombre"
        android:layout_alignStart="@+id/fotoperfil" />

    <TextView
        android:id="@+id/textotelefono"
        android:layout_width="200px"
        android:layout_height="40px"
        android:text="TELEFONO:"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/textoapellido"
        />

    <TextView
        android:id="@+id/telefono"
        android:layout_width="wrap_content"
        android:layout_height="40px"
        android:layout_marginTop="35dp"
        android:textColor="#ffffff"
        android:textSize="28dp"
        android:paddingLeft="60dp"
        android:text="02121234567"
        android:layout_below="@+id/apellido"
        android:layout_alignStart="@+id/fotoperfil"
        />

    <TextView
        android:id="@+id/textoemail"
        android:layout_width="150px"
        android:layout_height="40px"
        android:text="EMAIL:"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/textotelefono"
        />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:textColor="#ffffff"
        android:textSize="28dp"
        android:paddingLeft="10dp"
        android:text="oeneikaphotos@gmail.com"
        android:layout_below="@+id/telefono"
        android:layout_alignStart="@+id/fotoperfil" />


    <Button
        android:id="@+id/micuentaAtras"
        android:layout_width="30px"
        android:layout_height="30px"
        android:layout_marginStart="80dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/x"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/background_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>