    <uses-feature android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-feature android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <protected-broadcast android:name="android.intent.action.MEDIA_MOUNTED"/>

    <application
        android:name=".Aplicacion"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.LoginActivity"
            android:label="Subasta Online">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.Timeline"
            android:label="@string/app_name" />
        <activity
            android:name=".Activities.MiCuenta"
            android:label="MiCuenta" />
        <activity
            android:name=".CreacionSubasta.SubastaCreada"
            android:label="@string/app_name" />
        <activity
            android:name=".Activities.CrearSubastaActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".Activities.verLotes"
            android:label="bienes" />
        <activity
            android:name=".Activities.Registro"
            android:label="Registro" />
        <activity
            android:name=".Activities.verLotesMartillero"
            android:label="verLotesMartillero" />
        <activity android:name=".Activities.ConfiguracionActivity"></activity>
        <activity
            android:name=".Activities.verLotesPublicidad"
            android:label="bienes" />

    </application>

</manifest>